@using Resume.Config
@inject ResumeConfig Config
@if (Config.Recommendations.Count > 0)
{
    <section class="resume-section experience-section rec-section mb-5">
        <h2 class="resume-section-title text-uppercase font-weight-bold pb-3 mb-3">Letters of recommendations</h2>
        <div class="resume-section-content">
            <div class="resume-timeline position-relative">
                @for(var x = 0; x < Config.Recommendations.Count; x++)
                {
                    var rec = Config.Recommendations[x];
                    <article class="resume-timeline-item position-relative pb-@(x == Config.Recommendations.Count -1 ? "2" : "5")">
                        <div class="resume-timeline-item-header mb-2">
                            <div class="d-flex flex-column flex-md-row">
                                <h3 class="resume-position-title font-weight-bold mb-1">@rec.Name&nbsp;&nbsp;&nbsp;<a class="small" href="@rec.Profile"><i class="fa fa-address-card" data-fa-transform="shrink-2"></i></a></h3>
                                <div class="resume-company-name ml-auto">@rec.Position</div>
                            </div>
                        </div>
                        <div class="resume-timeline-item-desc">
                            @Html.Raw(rec.Summary)
                        </div>
                        @if (!string.IsNullOrEmpty(rec.LetterLink))
                        {
                        <p class="resume-rec-letterlink">
                            <a href="@rec.LetterLink" class="btn btn-secondary btn-sm">Read more</a>
                        </p>
                        }
                    </article>
                }
            </div>
        </div>
    </section>
}