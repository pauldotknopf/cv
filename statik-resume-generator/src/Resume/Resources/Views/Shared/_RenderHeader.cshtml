@using Resume.Config
@inject ResumeConfig Config

<header class="resume-header pt-4 pt-md-0">
    <div class="row">
        <div class="col-block col-md-auto resume-picture-holder text-center text-md-start">
            <img class="picture" src="@Config.Personal.Image" alt="">
        </div>
        <div class="col">
            <div class="row resume-picture-content px-4 pt-4 justify-content-center justify-content-md-between">
                <div class="primary-info col-auto">
                    <h1 class="name mt-0 mb-1 text-white text-uppercase text-uppercase">@Config.Personal.Name</h1>
                    <div class="title mb-3">@Config.Personal.PositionTitle</div>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a class="text-link" href="mailto:@Config.Personal.Email"><i class="far fa-envelope fa-fw me-2" data-fa-transform="grow-3"></i>@Config.Personal.Email</a></li>
                        <li><a class="text-link" href="tel:@Config.Personal.Phone"><i class="fas fa-mobile-alt fa-fw me-2" data-fa-transform="grow-6"></i>@Config.Personal.Phone</a></li>
                    </ul>
                </div>
                <div class="secondary-info col-auto mt-2">
                    <ul class="resume-social list-unstyled">
                        @foreach (var link in Config.Personal.Links)
                        {
                            <li class="@(Config.Personal.Links.IndexOf(link) < (Config.Personal.Links.Count - 1) ? "mb-3" : "")"><a class="text-link" href="@link.Url"><span class="fa-container text-center me-2"><i class="@link.Icon fa-fw"></i></span>@link.Name</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>